//获取应用实例
const app = getApp()
const userInforUrl = 'https://57924750.qcloud.la/walking-service'
Page({
  data: {
    motto: 'Hello World',
    userSteps:0,
    userInfo: {},
    hasUserInfo: false,
    canIUse: wx.canIUse('button.open-type.getUserInfo')
  },
  //事件处理函数
  bindViewTap: function() {
    wx.navigateTo({
      url: '../logs/logs'
    })
  },
  bindViewCes: function () {
    wx.navigateTo({
      url: '../ces/test/test'
    })
  },
  bindRankStep: function () {
    wx.navigateTo({
      url: '../ces/rankstep/rankstep'
    })
  },
  showLocation: function () {
    wx.navigateTo({
      url: '../ces/ggq/ggq'
    })
  },
  checkboxChange: function (e) {
    if (e.detail.value.length != 0) {
      wx.navigateTo({
        url: '../ces/guestInfo/guestInfo'
      })
    }
  },
  navigateTo: function () {
    wx.navigateTo({ 
      url: '../ces/userInfo/userInfo' 
    })
  },
  goToDemo:function(){
    wx.navigateTo({
      url: '../wxl-test/demo'
    })
  },
  //更新步数
  updateCurrentSteps:function(){
    var _this = this;
    setInterval(function(){
      var newData = app.globalData.userSteps;
      _this.setData({
        userSteps: newData
      });
    },1000);
    
  },  onLoad: function () {
    //注册回调函数
    if (app.globalData.userInfo) {
      this.setData({
        userInfo: app.globalData.userInfo,
        hasUserInfo: true
      })
    } else if (this.data.canIUse){
      // 由于 getUserInfo 是网络请求，可能会在 Page.onLoad 之后才返回
      // 所以此处加入 callback 以防止这种情况
      app.userInfoReadyCallback = res => {
        this.setData({
          userInfo: res.userInfo,
          hasUserInfo: true
        })
      }
    } else {
      // 在没有 open-type=getUserInfo 版本的兼容处理
      wx.getUserInfo({
        success: res => {
          app.globalData.userInfo = res.userInfo
          this.setData({
            userInfo: res.userInfo,
            hasUserInfo: true
          })
        }
      })
    }

    //判断用户是否签到
    if (getApp().globalData.isLogin = true){
      wx.redirectTo({
        url: '../ces/userInfo/userInfo'
      })
    }
    
    //判断用户是否签到  //暂时注释掉

    // if(true){
    //   wx.request({
    //     url: 'http://bwt.cesgroup.com.cn/user/isSignIn',
    //     data: {
    //       openId: getApp().globalData.openId
