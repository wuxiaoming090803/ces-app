@import "../../common/lib/weui.wxss"; 
/**index.wxss**/
.index-bg-container{
  width: 100%;
  height: 90vh;
}
.index-bg{
  width: 100%;
  height: 90vh;
}
.index-top-container{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  text-align: center;
}
.index-bottom-container{
  position:absolute;
  bottom:0;
  left:0;
  right:0;
  top:68%;
}
.index-logo1{
  width: 100%;
  height: 97%;
}
.index-logo{
  width: 100%;
  height: 30vh;
}
.index-title{
  position: absolute;
  top: 20%;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24px;
  font-weight: bold;
}
.index-form-container{
  position: absolute;
  top: 33%;
  left: 0;
  right: 0;
  text-align: center;
}
.weui-cells_after-title{
  width: 87%;
  margin: 0 auto;
  background-color: transparent;
  border-top: none;
}
.weui-cell_input{
  padding-top:5px;
}
.weui-input{
  margin-left: 10%;
}
.index-userName{
  width: 45rpx;
  height: 45rpx;
}
.index-phone{
  width: 45rpx;
  height: 45rpx;
}
.checkboxgroup{
  margin: 3% auto 1% 32%;
}
.btn-area{
  margin-top: 8%;
}
.btn-area button{
  display: inline-block;
}
.subCls{
  width: 90%;
 
}
.nav{
  display:inline-block;
  position:absolute;
  bottom:-19%;
  right:8%;
  font-size:18px;
  color: #0066FF;
}
.toast_mask { 
 position: fixed;
  top: 0;
  bottom: 0;
  z-index: 999999;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .2);
} 
/*toast*/
.toast_content_box { 
 display: flex; 
 width: 100%; 
 height: 100%; 
 justify-content: center; 
 align-items: center; 
 position: fixed; 
 z-index: 999; 
} 
.toast_content { 
 width: 50%; 
 padding: 30rpx; 
 background: rgba(0, 0, 0, 0.7); 
 border-radius: 20rpx;
} 
.toast_content_text { 
 height: 100%; 
 width: 100%; 
 color: #fff; 
 font-size: 35rpx;
font-weight: bold; 
 text-align: center; 
} 