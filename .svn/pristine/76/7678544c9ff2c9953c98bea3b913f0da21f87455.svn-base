/**index.wxss**/
page{
  height: 100%;
  font: 17px/1.5 "Microsoft Yahei",Tahoma, Helvetica, Arial, "SimSun", sans-serif;
}
.page-container{
  height: 100%;
}
.index-bg-container{
  width: 100%;
  height: 92vh;
}
.index-bg{
  width: 100%;
  height: 100%;
}
.page-body{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}
.page-info{
  flex: 1;
  width: 100%;
  background-color: #fff;
}
.page-info-title{
  width: 80%;
  text-align: center;
  font-size:20px;
  color: blue;
  margin: 15px auto;
}
.page-info-time{
  position:absolute;
  top:39%;
  text-align:left;
  line-height:2.6;
  width:100%;
}
.page-info-time view{
  width:97%;
  margin:0 auto;
  font-size:35.5rpx;
}
.page-info-image{
  position:absolute;
  top:0;
  left:0;
  right:0;
}
.index-image{
  width: 100%;
  height: 200px;
}
.page-info-detail.last{
  padding-left: 115rpx;
}
.page-bottom{
  height: 100rpx;
  background-color:#fff;
  display: flex;
  font-weight: bold;
  font-size:35.5rpx;
}
.page-bottom .nav{
  display: inline-block;
  flex: 1;
  border-left: 1px solid #ddd;
  line-height:3;
  text-align:center;
  color: #333;
}
.page-bottom .active{
  background-color: #1675be;
  color: #fff;
}