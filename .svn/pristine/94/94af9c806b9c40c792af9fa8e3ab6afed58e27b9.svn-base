@import "../../../common/lib/weui.wxss"; 
/**index.wxss**/
.index-bg-container{
  width: 100%;
  height: 100vh;
}
.index-bg{
  width: 100%;
  height: 100%;
}
.index-logo{
  width: 50%;
  height: 80px;
}
.index-title{
  position: absolute;
  top: 4%;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24px;
  font-weight: bold;
}
.index-form-container{
  position: absolute;
  top: 13%;
  left: 0;
  right: 0;
  text-align: center;
}
.weui-cells_after-title{
  width: 88%;
  margin: 0 auto;
  background-color: transparent;
  border-top: none;
}
.weui-cell_input{
  padding-top:5px;
}
.index-userName{
  width: 1.2rem;
  height: 1.2rem;
}
.index-phone{
  width: 1.1rem;
  height: 1.3rem;
}
.weiui-army{
  margin-bottom: 3%;
  margin-top: 3%
}
.army-rank1{
  margin-top: 5%;
}
.army{
  display:inline-block;
  margin-right:5%;
  width:20%;
  font-size:16px;
  color:#989898;
  outline:none;
  border-radius: 0;
  background-color:none;
}
.army.first{
  margin-left: 4%;
}
.weui-cell__radio{
  display: inline-block;
}
.weui-cell__radioGroup{
  display:inline-block;
  width:4em;
  height:2em;
  position:relative;
  cursor:pointer;
  border:1px solid #989898;
  text-align:center;
  line-height:2;
  margin:4px;
  color: #989898;
}
radio-group{
  width:85%;
  margin:0 auto;
}
radio{
  visibility: hidden;
  display: none;
}
radio:checked{
  color: red;
}