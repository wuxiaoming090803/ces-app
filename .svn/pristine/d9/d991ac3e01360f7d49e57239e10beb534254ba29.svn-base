    }, {
      id: 3,
      iconPath: "/imag/CSMarker.png",
      latitude: 121.011656,
      longitude: 31.080865,
      width: 100,
      height: 100
    }],
    polyline: [{
      points: [{
        longitude: 121.002601,
        latitude: 31.075174
      }, {
          longitude: 121.001092,
          latitude: 31.065771
        }, {
          longitude: 121.009357,
          latitude: 31.071153
        },
        {
          longitude: 121.011656,
          latitude: 31.080865
        }],
      color: "#D2691E",
      width: 2,
      borderColor:"#D2691E"
    }]
  },
  regionchange(e) {
    console.log(e.type)
  },
  markertap(e) {
    console.log(e.markerId)
  },
  controltap(e) {
    console.log(e.controlId)
  },
  onReady: function (e) {
    // 使用 wx.createMapContext 获取 map 上下文
    this.mapCtx = wx.createMapContext('myMap');
  },
  
  onLoad : function(){
    //this.openLocation();
  },
  //获取经纬度
  getLocation: function (e) {
    console.log(e)
    var that = this;
    wx.getLocation({
      success: function (res) {
        console.log(res)
        that.setData({
          hasLocation: true,
          location: {
            longitude: res.longitude,
            latitude: res.latitude
          }
        })
      }
    })
  },

  //根据经纬度在地图上显示
  openLocation: function () {
    var that = this
    wx.getLocation({
      type: 'gcj02', //返回可以用于wx.openLocation的经纬度
      success: function (res) {
        // that.setData({
        //   markers: [{
        //     latitude: res.latitude,
        //     longitude: res.longitude,
        //     iconPath: "../../images/destination.png"
        //   }]
        // })
        
        var latitude = res.latitude
        console.log(latitude);
        var longitude = res.longitude
        console.log(longitude);
        wx.openLocation({
          latitude: latitude ,
          longitude: longitude,
          name: '111'
        })
      }
    })
  }
})