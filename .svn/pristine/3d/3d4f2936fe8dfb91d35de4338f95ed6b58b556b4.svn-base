/**index.wxss**/
page{
  height: 100%;
  font: 17px/1.5 "Microsoft Yahei",Tahoma, Helvetica, Arial, "SimSun", sans-serif;
}
.page-container{
  height: 100%;
}
.index-bg-container{
  width: 100%;
  height: 92vh;
}
.index-bg{
  width: 100%;
  height: 100%;
}
.page-body{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}
.page-info{
  flex: 1;
  width: 100%;
  background-color: #fff;
}
.page-info-title{
  width: 80%;
  text-align: center;
  font-size:20px;
  color: blue;
  margin: 15px auto;
}
.page-activity-info{
  position:absolute;
  top:51%;
  text-align:left;
  line-height:2;
  width:98%;
  left: 1%;
}
.page-info-time{
  position:absolute;
  top:76%;
  text-align:left;
  line-height:2 ;
  width:99%;
  left: 1%;
}
.page-info-time view{
  width:97%;
  margin:0 auto;
  font-size:33rpx;
}
.page-info-image{
  position:absolute;
  top:0;
  left:0;
  right:0;
}
.index-image{
  width: 100%;
  height: 390rpx;
}
.page-info-detail{
  width:97%;
  margin:0 auto;
  font-size:33rpx;
}
.page-bottom{
  height: 100rpx;
  background-color:#fff;
  display: flex;
  font-size:32rpx;
}
.page-bottom .nav{
  display: inline-block;
  flex: 1;
  border-left: 1px solid #ddd;
  line-height:3;
  text-align:center;
  color: #333;
}
.page-bottom .active{
  background-color: #13b8e1;
  color: #fff;
}
.page-info scroll-view{
  position: absolute;
  top: 0;
  bottom: 8%;
}
.page-info-care{
  position:absolute;
  top:121%;
  text-align:justify;
  line-height:2;
  width:93%;
  font-size: 31rpx;
  left: 3%;
}
.page-info-photo{
