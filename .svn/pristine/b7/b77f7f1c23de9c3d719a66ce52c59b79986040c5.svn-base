@import "../../common/lib/weui.wxss"; 
/**index.wxss**/
.index-bg-container{
  width: 100%;
  height: 100vh;
}
.index-bg{
  width: 100%;
  height: 100%;
}
.index-top-container{
  position: absolute;
  top: 3%;
  left: 0;
  right: 0;
  text-align: center;
}
.index-logo{
  width: 50%;
  height: 80px;
}
.index-title{
  position: absolute;
  top: 20%;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24px;
  font-weight: bold;
}
.index-form-container{
  position: absolute;
  top: 30%;
  left: 0;
  right: 0;
  text-align: center;
}
.weui-cells_after-title{
  width: 88%;
  margin: 0 auto;
  background-color: transparent;
  border-top: none;
}
.weui-cell_input{
  padding-top:5px;
}
.index-userName{
  width: 1.2rem;
  height: 1.2rem;
}
.index-phone{
  width: 1.1rem;
  height: 1.3rem;
}
.checkboxgroup{
  margin: 3% auto 1% 32%;
}
.checkbox{
  color:#666666;
  font-size: 18px;
  vertical-align: bottom;
}