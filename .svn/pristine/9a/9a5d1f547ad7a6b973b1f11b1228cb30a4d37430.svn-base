/**index.wxss**/
page{
  height: 100%;
  width: 100%;
  font: 17px/1.5 "Microsoft Yahei",Tahoma, Helvetica, Arial, "SimSun", sans-serif;
}
.index-bg-container{
   position: absolute;
   top: 0;
   bottom: 2%;
   left: 0;
   right: 0;
}
.index-bg2{
  width: 100%;
  height: 100%;
}
.index-run-img{
  position:absolute;
  top:6%;
  height:47vh;
  left:10%;
  right:10%;
}
.index-modify{
  width:25%;
  position:absolute;
  right:3%;
  top:2%;
}
.btn-modify{
  font-size: 16px;
}
.outercicle{
  position:absolute;
  top:9%;
  left:50%;
  margin-left:-18vh;
  width:36vh;
  height:36vh;
  animation:circle 2s infinite linear;
}
@keyframes circle{
  0%{ transform:rotate(0deg); }
  100%{ transform:rotate(360deg); }
}
.innercicle{
  position:absolute;
  top:13%;
  left:50%;
  margin-left:-16vh;
  width:32vh;
  height:32vh;
}
.run-step{
  position:absolute;
  top:24%;
  left:50%;
  font-size:40px;
  color: #fff;
  font-weight: bold;
  width:200px;
  margin-left:-100px;
  text-align:center;
}
.run-info{
  position:absolute;
  top:46%;
  width:300px;
  left:50%;
  font-size: 18px;
  color: #474849;
  margin-left:-150px;
  text-align:center;
  margin-top:5%;
}
.index-run-hill{
  position:absolute;
  top:56%;
  width: 100%;
}
.hill{
  width: 100%;
}
.run-durtime{
  position:absolute;
  top:75%;
  color: #666666;
  font-size: 18px;
  width:100%;
  text-align:center;
}
.run-durtime p,.run-endtime p{
  color:#999998;
}
.run-endtime{
  position:absolute;
  top:80%;
  font-size: 18px;
  color: #666666;
  width:100%;
  text-align:center;
}
.page-bottom{
  height: 55px;
  background-color:#eee;
  position: absolute;
  bottom: 0;
  display: flex;
  left: 0;
  right: 0
}
.page-bottom .nav{
  display: inline-block;
  flex: 1;
  border-left: 1px solid #ddd;
  line-height:3;
  text-align:center;
}
.active{
  background-color: #1AAD19;
  color: #fff;
}
.countDown{
  position:absolute;
  left:38%;
  top:70%;
}