@import "../../../common/lib/weui.wxss"; 
/**index.wxss**/
.index-bg-container{
  width: 100%;
  height: 90vh;
}
.index-bg{
  width: 100%;
  height: 100%;
}
.index-top-container{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  text-align: center;
}
.index-bottom-container{
  position:absolute;
  bottom:0;
  left:0;
  right:0;
  top:66%;
}
.index-logo1{
  width: 100%;
  height: 98%;
}
.index-logo{
  width: 100%;
  height: 30vh;
}
.index-title{
  position: absolute;
  top: 20%;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24px;
  font-weight: bold;
}
.index-form-container{
  position: absolute;
  top: 33%;
  left: 0;
  right: 0;
  text-align: center;
}
.weui-cells_after-title{
  width: 88%;
  margin: 0 auto;
  background-color: transparent;
  border-top: none;
}
.weiui-army{
  margin-bottom: 4%;
}
.army-rank1{
  margin-top: 5%;
}
.army{
  display:inline-block;
  margin-right:5%;
  width:20%;
  font-size:16px;
  color:#989898;
  outline:none;
  border-radius: 0;
  background-color:none;
}
.army.first{
  margin-left: 4%;
}
.weui-cell__radio{
  display: inline-block;
}
.weui-cell__radioGroup{
  display:inline-block;
  width:5em;
  height:2.3em;
  position:relative;
  cursor:pointer;
  border:1px solid #989898;
  text-align:center;
  line-height:2.3em;
  margin:4px;
  color: #989898;
}
radio-group{
  width:85%;
  margin:0 auto;
}
radio{
  visibility: hidden;
  display: none;
}
radio:checked{
  color: red;
}
.select-army{
  margin-left:8%;
  text-align:left;
  color:#999999;
  font-size:18px;
  position: relative;
  margin-bottom: 3%;
}
.select-army::after{
  content:" ";
position:absolute;
left:0;
bottom:0;
right:0;
height:1px;
border-bottom:1rpx solid #666666;
color:#D9D9D9;
width: 92%;
}
.btn-area .subCls{
  width: 90%
}
.toast_mask { 
 position: fixed;
  top: 0;
  bottom: 0;
  z-index: 999999;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .2);
} 
/*toast*/
.toast_content_box { 
 display: flex; 
 width: 100%; 
 height: 100%; 
 justify-content: center; 
 align-items: center; 
 position: fixed; 
 z-index: 999; 
} 
.toast_content { 
 width: 50%; 
 padding: 30rpx; 
 background: rgba(0, 0, 0, 0.7); 
 border-radius: 20rpx;
} 
.toast_content_text { 
 height: 100%; 
 width: 100%; 
 color: #fff; 
 font-size: 35rpx; 
 font-weight: bold;
 text-align: center; 
} 